# Backend IMAAN - Environment Variables

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=imaan_db
DB_PORT=3306

# Server Configuration
PORT=5000

# JWT Configuration
JWT_SECRET=imaan_secret_key

# Firebase Configuration (untuk FCM Push Notification)
# Download Service Account Key dari Firebase Console
# Project Settings > Service Accounts > Generate New Private Key
# Simpan file JSON di folder be/ (misalnya: firebase-service-account.json)
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Cron Job Configuration
# Format cron: menit jam hari bulan hari_minggu
# Contoh: "0 9 * * *" = setiap hari jam 9 pagi
CRON_INVENTARIS_REMINDER=* * * * *
CRON_INVENTARIS_REMINDER=* * * * *
CRON_KEGIATAN_REMINDER=* * * * *
SALDO_MINIMUM=500000


# Threshold untuk reminder inventaris (dalam hari)
# Jika inventaris tidak diupdate selama X hari, kirim reminder
INVENTARIS_REMINDER_DAYS=0


